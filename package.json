{
  "name": "@refinist/eslint-config",
  "version": "0.0.1",
  "description": "ESLint config for refinist",
  "homepage": "https://github.com/refinist/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/refinist/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/refinist/eslint-config.git"
  },
  "license": "MIT",
  "author": "Jeff Wang",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "eslint",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "pnpm run lint --fix",
    "format-check": "prettier --check .",
    "format": "prettier --write ."
  },
  "prettier": "@refinist/prettier-config",
  "dependencies": {
    "@eslint/js": "^9.28.0",
    "@stylistic/eslint-plugin": "^4.4.1",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.2.0",
    "local-pkg": "^1.1.1",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.33.0",
    "vue-eslint-parser": "^10.1.3"
  },
  "devDependencies": {
    "@refinist/prettier-config": "^0.0.3",
    "@types/node": "^22.15.29",
    "bumpp": "^10.1.1",
    "eslint": "^9.28.0",
    "tsdown": "^0.12.6",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "eslint": "^9.28.0"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=22.16.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
